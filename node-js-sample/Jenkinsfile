pipeline {
    agent any

    environment {
        IMAGE_NAME = "houaidamang/nodejs-app"
        IMAGE_TAG  = "latest"
        FULL_IMAGE = "${IMAGE_NAME}:${IMAGE_TAG}"
    }

    stages {

        // ðŸ”¹ Stage 1 : Cloner le repo
        stage('Clone repo') {
            steps {
                git credentialsId: 'github', 
                    url: 'https://github.com/houaida-mangour/tp3-k8s.git', 
                    branch: 'main'
            }
        }

        // ðŸ”¹ Stage 2 : Build Docker image
        stage('Build Docker image') {
            steps {
                dir('node-js-sample') {
                    sh "docker build -t ${FULL_IMAGE} ."
                }
            }
        }

        // ðŸ”¹ Stage 3 : Push Docker image sur Docker Hub
        stage('Push to Docker Hub') {
            steps {
                dir('node-js-sample') {
                    withCredentials([usernamePassword(
                        credentialsId: 'dockerhub', 
                        usernameVariable: 'DOCKER_USER', 
                        passwordVariable: 'DOCKER_PASS'
                    )]) {
                        sh """
                        echo $DOCKER_PASS | docker login -u $DOCKER_USER --password-stdin
                        docker push ${FULL_IMAGE}
                        """
                    }
                }
            }
        }

        // ðŸ”¹ Stage 4 : DÃ©ployer sur Kubernetes
        stage('Deploy to Kubernetes') {
            steps {
                dir('node-js-sample') {
                    sh "kubectl apply -f deployment.yaml"
                }
            }
        }

    }

    post {
        success {
            echo "Pipeline terminÃ© avec succÃ¨s !"
            dir('node-js-sample') {
                sh "kubectl get pods"
                sh "kubectl get svc"
            }
        }
        failure {
            echo "Pipeline Ã©chouÃ©. VÃ©rifie les logs pour plus de dÃ©tails."
        }
    }
}
